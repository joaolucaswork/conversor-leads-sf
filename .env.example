# ========================================
# LEADS PROCESSING SYSTEM - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to config/.env and fill in your actual values
# For Heroku deployment, set these as environment variables using heroku config:set

# ========================================
# OPENAI CONFIGURATION
# ========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ========================================
# SALESFORCE OAUTH CONFIGURATION
# ========================================
# Create a Connected App in Salesforce Setup > App Manager
# Enable OAuth Settings and configure callback URLs

# Your Salesforce Connected App Consumer Key
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here

# Your Salesforce Connected App Consumer Secret
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here

# Your Salesforce login URL (replace 'your-domain' with your actual domain)
SALESFORCE_LOGIN_URL=https://your-domain.my.salesforce.com

# OAuth redirect URI (automatically configured for development/production)
# Development: http://localhost:5173/oauth/callback
# Production: https://your-app-name.herokuapp.com/oauth/callback
SALESFORCE_REDIRECT_URI=

# ========================================
# HEROKU DEPLOYMENT CONFIGURATION
# ========================================
# Set this to your Heroku app name for automatic redirect URI generation
HEROKU_APP_NAME=your-app-name

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Environment mode
NODE_ENV=development
PYTHON_ENV=development

# Debug mode (set to False for production)
DEBUG=True

# Web server configuration
WEB_CONCURRENCY=1
