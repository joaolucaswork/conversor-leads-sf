{
  "name": "electron-react-salesforce-app",
  "version": "0.1.0",
  "main": "app/main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "backend": "python backend/start_dev_server.py",
    "frontend": "vite",
    "dev:servers": "concurrently --kill-others --prefix-colors \"bgBlue.bold,bgGreen.bold\" --prefix \"[BACKEND],[FRONTEND]\" \"npm run backend\" \"npm run frontend:delayed\"",
    "dev:full": "node scripts/start-dev.js",
    "frontend:delayed": "wait-on --timeout 60000 --interval 1000 http://localhost:8000 && npm run frontend",
    "electron:delayed": "wait-on --timeout 120000 --interval 2000 http://localhost:5173 http://localhost:8000 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:start": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "electron-builder",
    "dev": "npm run dev:full"
  },
  "dependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@lottiefiles/dotlottie-react": "^0.13.5",
    "@mui/icons-material": "^5.0.0",
    "@mui/material": "^5.0.0",
    "axios": "^1.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "electron-store": "^8.0.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "lottie-react": "^2.4.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^15.5.2",
    "react-router-dom": "^6.0.0",
    "simple-oauth2": "^5.0.0",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.3"
  }
}
